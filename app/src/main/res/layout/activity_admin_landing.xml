<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/scrolls"
    tools:context=".AdminLanding">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:orientation="vertical">

                <com.github.sshadkany.neoText
                    android:id="@+id/neotext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neo_shadow_type="small_inner_shadow"
                    app:neo_radius="3dp">


                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/admin"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:textSize="60sp" />

                </com.github.sshadkany.neoText>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:orientation="horizontal">



                <com.github.sshadkany.shapes.RoundRectView
                    android:id="@+id/btn3a"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    app:shape_roundRect_backgroundColor="#ECF0F3"
                    app:shape_roundRect_bottomLeftRadius="12dp"
                    app:shape_roundRect_bottomRightRadius="12dp"
                    app:shape_roundRect_shadow_type="drop_shadow"
                    app:shape_roundRect_topLeftRadius="12dp"
                    app:shape_roundRect_topRightRadius="12dp"
                    tools:ignore="RtlSymmetry">

                    <com.github.sshadkany.shapes.RoundRectView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        app:shape_roundRect_backgroundColor="#ECF0F3"
                        app:shape_roundRect_bottomLeftRadius="12dp"
                        app:shape_roundRect_bottomRightRadius="12dp"
                        app:shape_roundRect_shadow_type="small_inner_shadow"
                        app:shape_roundRect_topLeftRadius="12dp"
                        app:shape_roundRect_topRightRadius="12dp">

                        <com.github.sshadkany.shapes.RoundRectView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15dp"
                            app:shape_roundRect_backgroundColor="#ECF0F3"
                            app:shape_roundRect_bottomLeftRadius="12dp"
                            app:shape_roundRect_bottomRightRadius="12dp"
                            app:shape_roundRect_shadow_type="drop_shadow"
                            app:shape_roundRect_topLeftRadius="12dp"
                            app:shape_roundRect_topRightRadius="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:padding="20dp"
                                android:layout_gravity="center"
                                android:background="@color/carbon_blue_900"
                                android:src="@drawable/logo"
                                android:contentDescription="@string/todos" />



                        </com.github.sshadkany.shapes.RoundRectView>
                    </com.github.sshadkany.shapes.RoundRectView>
                </com.github.sshadkany.shapes.RoundRectView>


            </LinearLayout>

            <com.github.sshadkany.RectButton
                android:id="@+id/rec_text_button"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                app:shape_roundRect_topRightRadius="60dp"
                app:shape_roundRect_bottomLeftRadius="60dp"
                app:shape_roundRect_light_color="#66494949"
                app:shape_roundRect_dark_color="#66000000"

                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/orders"
                    android:textSize="30sp" />
            </com.github.sshadkany.RectButton>

            <com.github.sshadkany.RectButton
                android:id="@+id/manageUsers"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                app:shape_roundRect_topRightRadius="60dp"
                app:shape_roundRect_bottomLeftRadius="60dp"
                app:shape_roundRect_light_color="#66494949"
                app:shape_roundRect_dark_color="#66000000"

                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/user_management"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </com.github.sshadkany.RectButton>


            <com.github.sshadkany.RectButton
                android:id="@+id/manageItems"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                app:shape_roundRect_topRightRadius="60dp"
                app:shape_roundRect_bottomLeftRadius="60dp"
                app:shape_roundRect_light_color="#66494949"
                app:shape_roundRect_dark_color="#66000000"

                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/price_management"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
            </com.github.sshadkany.RectButton>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/btnSignout"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawablePadding="8dp"
                android:text="@string/signout"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/carbon_red_900"

                />






        </LinearLayout>


    </ScrollView>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        style="@style/carbon_ProgressBar.Circular.Indeterminate"
        android:indeterminateDrawable="@drawable/cpb"
        android:layout_height="match_parent"
        android:layout_above="@+id/scrolls"
        android:background="#80000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:ignore="NotSibling" />

</RelativeLayout>