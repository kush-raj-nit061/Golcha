<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/akronim"
                android:text="@string/login"
                android:textColor="#700000"
                android:textSize="60sp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="167dp"
                android:layout_height="144dp"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:hint="@string/usernames"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="#2e3192"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/carbon_black_38"

                android:textColorLink="@color/black"
                 />



            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="#2e3192"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/carbon_black_38"
                android:textColorLink="@color/black"
                 />
            <TextView
                android:id="@+id/tvForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/akronim"
                android:text="@string/reset_password"
                android:textSize="20sp"
                 />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/login"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawablePadding="8dp"
                android:text="@string/login"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/carbon_red_900"


                />









        </LinearLayout>


    </ScrollView>

    <ProgressBar
        android:id="@+id/progressr"
        android:layout_width="match_parent"
        style="@style/carbon_ProgressBar.Circular.Indeterminate"
        android:indeterminateDrawable="@drawable/cpb"
        android:layout_height="match_parent"

        android:background="#80000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:ignore="NotSibling" />





</RelativeLayout>
