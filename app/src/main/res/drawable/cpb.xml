<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270"

    >

    <shape android:useLevel="false"
        android:shape="ring">
        <size android:height="11dp"
            android:width="1dp"/>

        <gradient android:endColor="@color/carbon_cyan_a400"
            android:centerColor="@color/carbon_deepOrange_400"
            android:startColor="@color/carbon_yellow_800"
            android:type="sweep"
            android:useLevel="false"
            />
    </shape>

</rotate>